<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.jpg" %>
  </a>


  <form class="navbar-form navbar-left" role="search">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Where to go?">
    </div>
    <button type="submit" class="btn btn-default">Search</button>
  </form>

  <!-- Right Navigation -->

  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="dropdown">
    <a><%= link_to 'Trips', show_trips_path, class: "navbar-wagon-item navbar-wagon-link" %></a>
      <a href="" class="navbar-wagon-item navbar-wagon-link">Messages</a>
    </div>

    <div class="navbar-wagon-left hidden-xs hidden-sm">
      <div class="dropdown navbar-wagon-item navbar-wagon-link ">
        <div class="dropdown-toggle" data-toggle="dropdown" role="button">Host</div>
        <ul class="dropdown-menu">
          <% if current_user %>
          <li><%= link_to 'Add apartment', new_apartment_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'My listings', show_listings_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to 'Your bookings', show_bookings_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'Your reviews', new_apartment_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li role="separator" class="divider"></li>
          <% end %>
        </ul>
      </div>
    </div>


    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="https://kitt.lewagon.com/placeholder/users/hendrikwol" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to 'Profile', show_profile_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'Edit profile', edit_profile_path(current_user.profile), class: "navbar-wagon-item navbar-wagon-link" if current_user.profile %></li>
          <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Host</a></li>
        <li><a href="#">Trips</a></li>
        <li><a href="#">Messagese</a></li>
      </ul>
    </div>
  </div>
</div>
