<h1>Check the apartments available</h1>
<% @apartments.each do |apartment| %>
  <h2><%= apartment.name %></h2>
  <p><%= apartment.description %></p>
  <p><%= apartment.apartment_type %></p>
  <p><%= apartment.price %></p>
  <p><%= apartment.number_of_guests %></p>
  <p><%= apartment.number_of_beds %></p>
  <p><%= apartment.number_of_bedrooms %></p>
  <p><%= apartment.number_of_bathrooms %></p>
  <p><%= apartment.checkin_time  %></p>
  <p><%= apartment.checkout_time %></p>
  <!-- more attributes of the apartment -->
<% end %>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
