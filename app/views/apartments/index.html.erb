
<h4 class="text-center">Check the apartments available</h4>
<div class="main-container">
  <div class="row">
    <% @apartments.each do |apartment| %>
    <div class="col-xs-12">
      <div class="card text-center" style="background-image: url('<%= cl_image_path apartment.photo if apartment.photo? %>')">
        <div class="text-center">
          <h2> <%= link_to apartment.name, apartment_path(apartment) %></h2>
          <p><strong>Description: </strong><%= apartment.description %></p>
        </div>
          <p><strong>Apartment type: </strong><%= apartment.apartment_type %></p>
          <p><strong>Price per night: </strong><%= apartment.price %></p>
          <p><strong>Beds: </strong><%= apartment.number_of_beds %></p>
      </div>
    </div>
    <% end %>
  </div>
<div id="map" style="width: 100%; height: 600px;"></div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

