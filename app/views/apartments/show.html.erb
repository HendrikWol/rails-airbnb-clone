
<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%);">
</div>

<div class="profile-container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="profile">
          <!-- Inject flat data in template -->
        <div class="profile-box">
          <%= cl_image_tag @apartment.photo, height: 300, width: 400, crop: :fill %>
          </div>
          <div class="profile-description">
          <h2><strong><%= @apartment.name %></strong></h2>
            <h4><%= @apartment.city %>, <%= @apartment.country %></h4>
            <p><strong>â‚¬<%= @apartment.price %></strong> per night</p>
            <p><%= @apartment.description %></p>



          </div>
        </div>
      </div>

      <div class="col-xs-4 col-xs-offset-4">
        <%= simple_form_for [@apartment, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.button :submit, method: :post %>
      <% end %>

      </div>

  </div>
</div>



<div class="info-container">
  <h2>About this place</h2>
   <p><%= @apartment.description %></p>
    <hr>
    <div class="row">
      <div class="col-xs-12 col-sm-2">
        The Space
      </div>
      <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>Accommodates: <strong><%= @apartment.apartment_type %></strong></li>
          <li>Bathrooms: <strong><%= @apartment.number_of_bathrooms %></strong></li>
          <li>Beds: <strong><%= @apartment.number_of_beds %></strong></li>
        </ul>
      </div>
       <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>Property type: <strong></strong></li>
          <li>Bedrooms: <strong><%= @apartment.number_of_bedrooms %></strong></li>
        </ul>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-12 col-sm-2">
        Amenities
      </div>
      <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>Wifi: <strong></strong></li>
          <li>Welcome drink: <strong></strong></li>
        </ul>
      </div>
       <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <li>TV: <strong></strong></li>
          <li>Kitchen: <strong></strong></li>
        </ul>
      </div>



    </div>

    <h4>Show ratings of this apartment:</h4>
    <% if @apartment.reviews.blank? %>
    <p>Be the first to leave a review!</p>
    <% else %>
    <% @apartment.reviews.each do |review| %>

    <%= review.rating %>
    <%= review.content %>
    <% end %>
    <% end %>
  </div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @flat_coordinates.to_json %>;
      alert('Flat coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
