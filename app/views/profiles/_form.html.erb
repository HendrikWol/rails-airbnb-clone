<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4-offset-3">
      <%= simple_form_for(@profile) do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name  %>

      <%= f.input :description %>
      <%= f.input :date_of_birth, as: :date %>
      <%= f.input :phone_number %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
