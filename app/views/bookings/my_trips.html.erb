<div class="booking-container">
  <div class="row">
<h3 class="text-center">Trips</h3>
<br>
    <% @bookings.each do |booking| %>
   <div class="col-xs-12 col-md-4">

    <%= link_to apartment_path(booking.apartment) do %>


      <div class="card" style="background-image: url('<%= cl_image_path booking.apartment.photo, height: 300, width: 400, crop: :fill if booking.apartment.photo? %>')">
        <% end %>
    </div>

    <div class="card-description">
      <h5><%= booking.apartment.name %> in <%= booking.apartment.city%></h5>
      <h6><%= booking.start_date %> until <%= booking.end_date %></h6>
      <p> Number of nights: <%= (booking.end_date - booking.start_date).to_i %></p>
      <p> Total price: â‚¬<%= (booking.apartment.price * ((booking.end_date - booking.start_date).to_i))%></p>
      <h6>Status: <%= booking.status %></h6>
      <h6><%= link_to 'See booking', apartment_booking_path(booking.apartment, booking), class: "btn btn-success" %></h6>
      <h6><%= link_to 'Cancel request', change_status_path(status: 'Declined', id: booking), class: "btn btn-danger" %></h6>
      </div>
    </div>
    <% end %>
  </div>
</div>


