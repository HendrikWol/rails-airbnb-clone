<div class="booking-container">
<div class="row">
<div class="text-center">
<h2>Booking requests:</h2>
</div>

<div class="col-xs-12 col-md-4 col-lg-3 ">
  <% @bookings.each do |booking| %>
  <div class="card-description">
  <p><strong><%= booking.user.profile.first_name %></strong> made a request to book your apartment</p>
  <p><strong>Listing: </strong><%= booking.apartment.name %> in <%= booking.apartment.city%></p>
  <p><strong>From: </strong>
        <%= booking.start_date %><strong> until: </strong>
        <%= booking.end_date %>
      </p>
      <p><strong>Number of nights: </strong><%= (booking.end_date - booking.start_date).to_i %></p>
    </p>
      <p>
        <strong>Total price: </strong>â‚¬<%= (booking.apartment.price * ((booking.end_date - booking.start_date).to_i))%>
      </p>

      <p>
        <strong>Status: </strong> <%= booking.status %>
      </p>
      </div>



  <%= link_to 'See booking', apartment_booking_path(booking.apartment, booking), class: "btn btn-primary" %>
  <br>
  <% unless booking.status == 'Accepted' %>
      <p class="btn btn-primary" style="background-color: green;
  border-color: green; border-radius: 4px; margin: 10px 0;">
    <%= link_to 'Accept', change_status_path(status: 'Accepted', id: booking)%>
    </p>
  <p class="btn btn-primary" style="background-color: #ff5961;
  border-color: #ff5961; border-radius: 4px; margin: 10px 0;">
    <%= link_to 'Decline', change_status_path(status: 'Declined', id: booking)%>
  </p>
  <% end %>
  <br>
  <% end %>

  </div>
</div>
</div>
